

<div class="row">
	<div class="col-md-6">
		<div class="thumbnail">
			<%= image_tag @listing.image.url %>
		</div>	
	</div>
	<div class="col-md-6">
		<h3><%= @listing.name %></h3>
		<p><%= "by #{@listing.seller.name}(#{@listing.seller.aka_name})" %></p>
		<% if user_signed_in? and current_user.liked? @listing.seller %>
			<%= link_to "unbookmark #{@listing.seller.name}", bookmark_listing_path(@listing), method: :put %></p>
		<% else %>
			<%= link_to "bookmark #{@listing.seller.name}", bookmark_listing_path(@listing), method: :put %></p>
		<% end %>
		<p><%= number_to_currency(@listing.price) %></p>
		<p><%= @listing.description %></p>
		<p><%= link_to "Liked ", like_listing_path(@listing), method: :put %><%= "by #{@listing.get_likes.size}" %></p> 
		<br>
		<br>
		<div class="center">
			<%= link_to 'Order it now', new_listing_order_path(@listing), class: "btn btn-primary", data: {no_turbolink: true} %>
		</div>
	</div>	
</div>
<% if @listing.seller == current_seller %>
	<%= link_to 'Edit', edit_listing_path(@listing) %> |
	<%= link_to 'Delete', @listing, method: :delete, data: {confirm: 'Are you sure to delete?'}, class: "btn btn-link" %> |
<% end %>
