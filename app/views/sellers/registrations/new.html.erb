<h2>Merchant Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, autofocus: true, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :aka_name %>
    <%= f.text_field :aka_name, class: "form-control" %>
  </div>  

  <div class="form-group">
    <%= f.label :email %>
    <%= f.email_field :email, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :password %>
    <%= f.password_field :password, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :password_confirmation %>
    <%= f.password_field :passowrd_confirmation, class: "form-control" %>
  </div>    

  <h3>Business location</h3>
  <div class="form-group">
    <%= f.label :address_line1 %>
    <%= f.text_field :address_line1, class: "form-control" %>    
  </div>

  <div class="form-group">
    <%= f.label :address_line2 %>
    <%= f.text_field :address_line2, class: "form-control" %>    
  </div>
      
  <div class="row">
    <div class="col-md-4">
      <div class="form-group">
        <%= f.label :city %>
        <%= f.text_field :city, class: "form-control" %>    
      </div>
    </div>
    <div class="col-md-4">  
      <div class="form-group">
        <%= f.label :state %><br>
        <%= f.select :state, us_states, class: "form-control" %>
      </div>
    </div>
    <div class="col-md-4">  
      <div class="form-group">
        <%= f.label :zip_code %>
        <%= f.text_field :zip_code, class: "form-control" %>    
      </div>
    </div>
  </div>  

  <h3>Other info</h3>
  <div class="form-group">
    <%= f.label :sales_tax_rate %><i> (only the digits before '%')</i>
    <%= f.text_field :tax_rate, class: "form-control" %>    
  </div>
  <div class="form-group">
    <%= label_tag :phone %><i> (no dash, parentheses or country code)</i>
    <%= f.telephone_field :phone, class: "form-control" %>    
  </div>

  <div class="row">
    <div class="col-md-2">
      <div class="form-group">
        <%= f.label :weekday_open_at %>
        <%= f.select :weekday_open_at, business_hours, class: "form-control" %>    
      </div>
    </div>
    <div class="col-md-2">
      <div class="form-group">
        <%= f.label :weekday_close_at %>
        <%= f.select :weekday_close_at, business_hours, class: "form-control" %>    
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-md-2">
      <div class="form-group">
        <%= f.label :saturday_open_at %>
        <%= f.select :saturday_open_at, business_hours, class: "form-control" %>    
      </div>
    </div>
    <div class="col-md-2">
      <div class="form-group">
        <%= f.label :saturday_close_at %>
        <%= f.select :saturday_close_at, business_hours, class: "form-control" %>    
      </div>
    </div>
  </div>

  <div class="row">  
    <div class="col-md-2">
      <div class="form-group">
        <%= f.label :sunday_open_at %>
        <%= f.select :sunday_open_at, business_hours, class: "form-control" %>    
      </div>
    </div>
    <div class="col-md-2">
      <div class="form-group">
        <%= f.label :sunday_close_at %>
        <%= f.select :sunday_close_at, business_hours, class: "form-control" %>    
      </div>
    </div>                
  </div>

  <br>

  <div><%= f.submit "Sign up", class: "btn btn-primary" %></div>

  <br>
<% end %>

<%= render "sellers/shared/links" %>
